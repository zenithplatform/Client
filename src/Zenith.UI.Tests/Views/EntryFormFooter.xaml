<UserControl x:Class="Zenith.UI.Tests.Views.EntryFormFooter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zenith.UI.Tests.Views"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Border Grid.Row="2">
        <DockPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="5">
                        <Hyperlink Foreground="Black">
                            I forgot my password
                        </Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="5" HorizontalAlignment="Right">
                    <Hyperlink Foreground="Black">
                        Skip this, maybe later
                    </Hyperlink>
                </TextBlock>
                <CheckBox Content="Don't show this next time" Margin="5"
                          HorizontalAlignment="Right"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
